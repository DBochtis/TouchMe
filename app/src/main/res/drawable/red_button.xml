<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <size
                android:width="200dp"
                android:height="200dp" />
            <solid android:color="#99D70900" />
            <corners android:radius="30dp" />
            <stroke
                android:width="5dp"
                android:color="#000000" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:centerColor="#D70900"
                android:endColor="#FF1A1A"
                android:startColor="#9A0600"
                android:type="linear" />
            <size
                android:width="200dp"
                android:height="200dp" />
            <corners android:radius="30dp" />
        </shape>
    </item>

</layer-list>