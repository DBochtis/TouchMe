<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_activity_background"
    tools:context="com.example.dimitris.touchmedemo.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/topRel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/base_button"
            android:gravity="center">

            <TextView
                android:id="@+id/titleTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/main_activity_secondary_text"
                android:textSize="30dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/onePlayerRel"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/topRel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/main_activity_green"
            android:gravity="center">

            <TextView
                android:id="@+id/onePlayerTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_activity_one_player"
                android:textColor="@color/main_activity_primary_text"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/twoPlayersRel"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/onePlayerRel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/main_activity_blue"
            android:gravity="center">

            <TextView
                android:id="@+id/twoPlayersTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_activity_two_players"
                android:textColor="@color/main_activity_primary_text"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/exitRel"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/twoPlayersRel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/main_activity_red"
            android:gravity="center">

            <TextView
                android:id="@+id/exitTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_activity_exit"
                android:textColor="@color/main_activity_primary_text"
                android:textSize="30sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
